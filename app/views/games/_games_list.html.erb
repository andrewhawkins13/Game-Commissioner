<% if games.any? %>
  <div class="space-y-4">
    <%= render partial: "games/game", collection: games %>
  </div>
<% else %>
  <div class="bg-white rounded-lg shadow-sm p-8 text-center">
    <p class="text-gray-500 text-lg">No upcoming games scheduled.</p>
    <%= link_to "Create your first game", new_game_path, class: "text-blue-600 hover:text-blue-700 font-semibold mt-2 inline-block" %>
  </div>
<% end %>
