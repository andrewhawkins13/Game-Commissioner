<div class="bg-white rounded-lg shadow-sm p-6 mb-6">
  <div class="flex items-center justify-between">
    <div class="flex-1">
      <h2 class="text-lg font-semibold text-gray-900 mb-2">AI Assignment</h2>
      <p class="text-sm text-gray-600">Select a model and let AI assign officials to open positions</p>
    </div>

    <%= form_with url: assign_open_games_path, method: :post, class: "flex items-end space-x-4", data: { controller: "assignment-persistence" } do |form| %>
      <div class="flex-1 max-w-xs">
        <%= form.label :model, "Model", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :model,
            options_for_select(available_ollama_models, default_ollama_model),
            {},
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
            data: {
              assignment_persistence_target: "model",
              action: "change->assignment-persistence#saveModel"
            }
        %>
      </div>

      <%= form.submit "Reset & Assign All Games",
          class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-md cursor-pointer transition-colors",
          data: { turbo_confirm: "This will delete ALL existing assignments and use AI to assign officials to all games. Continue?" }
      %>
    <% end %>
  </div>

  <% if OllamaService.available? %>
    <div class="mt-3 text-xs text-green-600 flex items-center">
      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      Ollama is running
    </div>
  <% else %>
    <div class="mt-3 text-xs text-red-600 flex items-center">
      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
      </svg>
      Ollama is not running - start Ollama to use AI assignments
    </div>
  <% end %>
</div>
