<div class="w-full">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center justify-between mb-4">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">AI Models</h1>
        <p class="text-gray-600 mt-1">Manage and compare Ollama models for official assignment</p>
      </div>

      <div class="flex items-center gap-3">
        <!-- Ollama Status -->
        <% if @ollama_available %>
          <span class="inline-flex items-center px-3 py-1.5 rounded-lg bg-green-100 text-green-800 text-sm font-medium">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
            Ollama Running
          </span>
        <% else %>
          <span class="inline-flex items-center px-3 py-1.5 rounded-lg bg-red-100 text-red-800 text-sm font-medium">
            <span class="w-2 h-2 bg-red-500 rounded-full mr-2"></span>
            Ollama Offline
          </span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Models Grid -->
  <% if @models.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      <% @models.each do |model| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow">
          <!-- Model Header -->
          <div class="p-6 border-b border-gray-200">
            <div class="flex items-start justify-between mb-3">
              <h3 class="text-lg font-semibold text-gray-900"><%= model[:name] %></h3>
              <% if model[:used] %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  In Use
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                  Unused
                </span>
              <% end %>
            </div>

            <!-- Model Size/Info -->
            <% if model[:metadata] && model[:metadata]["details"] %>
              <% details = model[:metadata]["details"] %>
              <div class="text-sm text-gray-600 space-y-1">
                <% if details["parameter_size"] %>
                  <div>Size: <%= details["parameter_size"] %></div>
                <% end %>
                <% if details["family"] %>
                  <div>Family: <%= details["family"].titleize %></div>
                <% end %>
              </div>
            <% end %>
          </div>

          <!-- Performance Metrics -->
          <div class="p-6">
            <% stats = model[:stats] %>

            <% if stats[:total_attempts] > 0 %>
              <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                  <div class="text-xs text-gray-500 mb-1">Fill Rate</div>
                  <div class="text-xl font-bold <%= stats[:avg_success_rate] >= 70 ? 'text-green-600' : 'text-amber-600' %>">
                    <%= number_to_percentage(stats[:avg_success_rate], precision: 0) %>
                  </div>
                </div>

                <div>
                  <div class="text-xs text-gray-500 mb-1">Attempts</div>
                  <div class="text-xl font-bold text-gray-900">
                    <%= stats[:total_attempts] %>
                  </div>
                </div>

                <div>
                  <div class="text-xs text-gray-500 mb-1">Avg Tokens</div>
                  <div class="text-xl font-bold text-gray-900">
                    <%= number_to_human(stats[:avg_tokens], precision: 0) %>
                  </div>
                </div>

                <div>
                  <div class="text-xs text-gray-500 mb-1">Avg Duration</div>
                  <div class="text-xl font-bold text-gray-900">
                    <%= stats[:avg_duration_seconds] %>s
                  </div>
                </div>
              </div>

              <div class="text-xs text-gray-500 mb-3">
                Last used <%= time_ago_in_words(stats[:last_used]) %> ago
              </div>
            <% else %>
              <div class="text-center py-6 text-gray-500 text-sm">
                No usage data available
                <div class="text-xs mt-1">Run an assignment to see metrics</div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Leaderboard -->
    <% if @leaderboard && @leaderboard.any? %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Performance Leaderboard</h2>

        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rank</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Model</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Performance Score</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fill Rate</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Token Efficiency</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Attempts</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Avg Duration</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @leaderboard.each_with_index do |model, index| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <% if index == 0 %>
                        <span class="text-2xl">ðŸ¥‡</span>
                      <% elsif index == 1 %>
                        <span class="text-2xl">ðŸ¥ˆ</span>
                      <% elsif index == 2 %>
                        <span class="text-2xl">ðŸ¥‰</span>
                      <% else %>
                        <span class="text-sm font-medium text-gray-900"><%= index + 1 %></span>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="text-sm font-medium text-gray-900"><%= model[:name] %></span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-bold text-gray-900"><%= model[:score] %>/100</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm <%= model[:avg_success_rate] >= 70 ? 'text-green-600' : 'text-amber-600' %> font-medium">
                      <%= number_to_percentage(model[:avg_success_rate], precision: 1) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900 font-medium">
                      <%= number_with_precision(model[:token_efficiency_ratio], precision: 2) %>
                    </div>
                    <div class="text-xs text-gray-500">per 1k tokens</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= model[:total_attempts] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= model[:avg_duration_seconds] %>s</div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
      <div class="text-gray-400 mb-4">
        <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No Models Available</h3>
      <p class="text-gray-600 mb-4">
        <% if @ollama_available %>
          Use <code class="bg-gray-100 px-2 py-1 rounded text-sm">ollama pull &lt;model-name&gt;</code> to add your first model.
        <% else %>
          Please start Ollama to view models.
        <% end %>
      </p>
    </div>
  <% end %>
</div>
