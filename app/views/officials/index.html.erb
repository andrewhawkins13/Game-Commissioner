<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Officials</h1>
  </div>

  <% if @officials.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @officials.each do |official| %>
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
          <div class="flex justify-between items-start mb-3">
            <h3 class="text-lg font-semibold text-gray-900"><%= official.name %></h3>
          </div>

          <div class="space-y-2 text-sm">
            <p class="text-gray-600">
              <span class="font-medium">Email:</span> <%= official.email %>
            </p>
            <% if official.phone %>
              <p class="text-gray-600">
                <span class="font-medium">Phone:</span> <%= official.phone %>
              </p>
            <% end %>
            <% if official.max_distance %>
              <p class="text-gray-600">
                <span class="font-medium">Max Distance:</span> <%= official.max_distance %> miles
              </p>
            <% end %>

            <div class="pt-2 border-t border-gray-200">
              <p class="font-medium text-gray-700 mb-1">Roles:</p>
              <div class="flex flex-wrap gap-1">
                <% if official.official_roles.any? %>
                  <% official.official_roles.each do |role| %>
                    <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded"><%= role.role.upcase %></span>
                  <% end %>
                <% else %>
                  <span class="text-gray-500 text-xs">No roles assigned</span>
                <% end %>
              </div>
            </div>

            <div class="pt-2 border-t border-gray-200">
              <p class="font-medium text-gray-700 mb-1">Rules:</p>
              <% if official.rules.active.any? %>
                <ul class="list-disc list-inside text-xs text-gray-600">
                  <% official.rules.active.limit(3).each do |rule| %>
                    <li><%= truncate(rule.rule_text, length: 60) %></li>
                  <% end %>
                </ul>
              <% else %>
                <span class="text-gray-500 text-xs">No rules set</span>
              <% end %>
            </div>

            <div class="pt-2 border-t border-gray-200">
              <p class="text-gray-600">
                <span class="font-medium">Assignments:</span> <%= official.assignments.count %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-sm p-8 text-center">
      <p class="text-gray-500 text-lg">No officials added yet.</p>
      <%= link_to "Add your first official", new_official_path, class: "text-blue-600 hover:text-blue-700 font-semibold mt-2 inline-block" %>
    </div>
  <% end %>
</div>
