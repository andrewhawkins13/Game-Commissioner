<%
  # Determine CSS classes based on message type
  bg_class = case type
  when "success" then "bg-green-50 border-green-200 text-green-800"
  when "warning" then "bg-amber-50 border-amber-200 text-amber-800"
  when "error", "alert" then "bg-red-50 border-red-200 text-red-800"
  else "bg-blue-50 border-blue-200 text-blue-800"
  end
%>

<div class="<%= bg_class %> border px-4 py-3 rounded-md mb-4">
  <%= message %>
</div>
